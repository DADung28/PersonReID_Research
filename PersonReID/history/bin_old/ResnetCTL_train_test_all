#!/bin/bash 

python3 train.py --centroid --data_dir /home/jun/ReID_Dataset/duke/dataloader/ --lr 0.01 --batch 64 --erasing_p 0.5  --warm_epoch 5 --name ResnetCTL_all_trick_duke --gpu_ids $1
python3 cross_test.py --name ResnetCTL_all_trick_duke --test duke --gpu_ids $1
python3 cross_test.py --name ResnetCTL_all_trick_duke --test market --gpu_ids $1
python3 cross_test.py --name ResnetCTL_all_trick_duke --test cuhk03 --gpu_ids $1

python3 train.py --centroid --data_dir /home/jun/ReID_Dataset/market/dataloader/ --lr 0.01 --batch 64 --erasing_p 0.5  --warm_epoch 5 --name ResnetCTL_all_trick_market --gpu_ids $1
python3 cross_test.py --name ResnetCTL_all_trick_market --test duke --gpu_ids $1
python3 cross_test.py --name ResnetCTL_all_trick_market --test market --gpu_ids $1
python3 cross_test.py --name ResnetCTL_all_trick_market --test cuhk03 --gpu_ids $1

python3 train.py --centroid --data_dir /home/jun/ReID_Dataset/cuhk03/dataloader_new_detected/ --lr 64 --batch 256 --erasing_p 0.5  --warm_epoch 5 --name ResnetCTL_all_trick_cuhk03 --gpu_ids $1
python3 cross_test.py --name ResnetCTL_all_trick_cuhk03 --test duke --gpu_ids $1
python3 cross_test.py --name ResnetCTL_all_trick_cuhk03 --test market --gpu_ids $1
python3 cross_test.py --name ResnetCTL_all_trick_cuhk03 --test cuhk03 --gpu_ids $1
